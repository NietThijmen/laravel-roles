{
    "name": "nietthijmen/laravel-roles",
    "description": "This is my package laravel-roles",
    "keywords": [
        "laravel",
        "roles",
        "permissions",
        "middleware",
        "authorization"
    ],
    "homepage": "https://github.com/nietthijmen/laravel-roles",
    "license": "MIT",
    "authors": [
        {
            "name": "NietThijmen",
            "email": "thijmen@rierink.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^10.0||^11.0||^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "phpstan/phpstan-phpunit": "^1.3||^2.0"
    },
    "autoload": {
        "psr-4": {
            "NietThijmen\\LaravelRoles\\": "src/",
            "NietThijmen\\LaravelRoles\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NietThijmen\\LaravelRoles\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "NietThijmen\\LaravelRoles\\LaravelRolesServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": false
}
